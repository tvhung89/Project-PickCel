                                        a.page-link(href="#")
                                            i.icon-angle-left
                                    li.page-item.active
                                        a.page-link(href="#") 1
                                    li.page-item
                                        a.page-link(href="#") 2
                                    li.page-item
                                        a.page-link(href="#") 3
                                    li.page-item.disabled
                                        a.page-link(href="#")
                                            i.icon-angle-double-right
                                    li.page-item.disabled
                                        a.page-link(href="#")
                                            i.icon-angle-right
